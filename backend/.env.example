# =======================================
# Live Flash Auction - Environment Variables
# =======================================

# -----------------
# Database (PostgreSQL)
# -----------------
DATABASE_URL=postgresql://username:password@localhost:5432/live_auction
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# -----------------
# Redis
# -----------------
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# -----------------
# AWS Configuration
# -----------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# AWS IVS (Interactive Video Service)
IVS_CHANNEL_TYPE=STANDARD

# AWS SQS
SQS_BID_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/bid-persistence-queue
SQS_NOTIFICATION_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/notification-queue
SQS_CHAT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/chat-persistence-queue

# AWS DynamoDB
DYNAMODB_BIDS_TABLE=bids_history
DYNAMODB_CHAT_TABLE=chat_messages

# -----------------
# AWS Cognito (Authentication)
# -----------------
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_APP_CLIENT_ID=your_app_client_id
COGNITO_REGION=us-east-1
COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX

# -----------------
# Service URLs (Internal)
# -----------------
AUCTION_MANAGEMENT_URL=http://auction-management-service:8000
WEBSOCKET_SERVICE_URL=http://websocket-service:8001
BID_PROCESSING_URL=http://bid-processing-service:8002
TIMER_SERVICE_URL=http://timer-service:8003

# -----------------
# Application Settings
# -----------------
FLASK_ENV=development
FLASK_DEBUG=True
LOG_LEVEL=INFO

# Auction Settings
DEFAULT_AUCTION_DURATION=3600  # seconds (1 hour)
ANTI_SNIPE_THRESHOLD=30  # seconds
ANTI_SNIPE_EXTENSION=30  # seconds
MAX_ANTI_SNIPE_EXTENSIONS=5
MINIMUM_BID_INCREMENT=100  # dollars

# -----------------
# CORS Settings
# -----------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------
# WebSocket Settings
# -----------------
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60
MAX_CONNECTIONS_PER_AUCTION=1000

# -----------------
# Timer Service Settings
# -----------------
TIMER_BROADCAST_INTERVAL=1  # seconds
TIMER_SYNC_INTERVAL=5  # seconds

# -----------------
# Redis Key Prefixes
# -----------------
REDIS_AUCTION_PREFIX=auction
REDIS_CONNECTION_PREFIX=connection
REDIS_USER_PREFIX=user

# -----------------
# Feature Flags (Optional)
# -----------------
ENABLE_CHAT_PERSISTENCE=false
ENABLE_BID_ANALYTICS=false
ENABLE_RATE_LIMITING=true
